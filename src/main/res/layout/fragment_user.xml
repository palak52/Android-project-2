<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/may_i_help_you"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:fontFamily="@font/baloo"
            android:textSize="45dp"
            android:textColor="#388E3C"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_below="@id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Download the Complete Poduct User Manual "
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:fontFamily="@font/baloo"
            android:textSize="20dp"
            android:textColor="#1976D2"/>

        <Button
            android:id="@+id/manual"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:textAlignment="center"
            android:layout_marginTop="-1dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/baloo"
            android:padding="12dp"
            android:text="Manual"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />

        <Button
            android:gravity="center_horizontal"
            android:id="@+id/vedio1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/wiring"
            android:layout_marginTop="-1dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/baloo"
            android:padding="12dp"
            android:text="Vedio 1"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"/>

        <Button
            android:gravity="center_horizontal"
            android:id="@+id/vedio2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/vedio1"
            android:layout_marginTop="-1dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/baloo"
            android:padding="12dp"
            android:text="Vedio 2"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"/>


        <Button
            android:gravity="center_horizontal"
            android:id="@+id/wiring"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/manual"
            android:layout_marginTop="-1dp"
            android:background="@drawable/circle"
            android:fontFamily="@font/baloo"
            android:padding="12dp"
            android:text="Wiring"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"/>

        <TextView
            android:layout_below="@id/vedio2"
            android:id="@+id/txt10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/logic_brotherscompany"
            android:paddingLeft="10dp"
            android:textColor="#FEBD49"
            android:textSize="14dp"
            android:fontFamily="@font/baloo"
            android:paddingTop="70dp"
            />

        <TextView
            android:layout_below="@id/txt10"
            android:id="@+id/txt11"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="logicbrothersandcompany@gmail.com"
            android:paddingLeft="10dp"
            android:textColor="#FEBD49"
            android:textSize="10dp"
            android:fontFamily="@font/baloo"
            />
    </RelativeLayout>
    </ScrollView>

</FrameLayout>